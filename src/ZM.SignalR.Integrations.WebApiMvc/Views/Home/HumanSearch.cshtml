
@{
    ViewBag.Title = "Search for a Human";
}

@section Styles
{
    @Styles.Render("~/bundles/prettifyCss")
}

@section Scripts
{
    <script>
        var HumanModel = ko.observable(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(new ZM.SignalR.Integrations.WebApiMvc.Models.Human())));
        var errors = ko.observableArray();
    </script>

    <script src="~/Scripts/api-get-human.js?seed=@DateTime.Now.Ticks.ToString()"></script>

    @Scripts.Render("~/bundles/prettifyJs")
}

<h2>Find a Human</h2>

<div class="alert alert-success" data-bind="css: { 'alert-danger': gotError }">
    <span data-bind="text: response()"></span>
</div>
<div class="form-group">
    <label>Human Identification #</label>
    <input class="form-control" data-bind="value: inputModel.humanId" />
</div>
<div class="form-group">
    <label>Guess a Number from 1 to 100</label>
    <input class="form-control" data-bind="value: inputModel.guessedNumber" />
</div>
<button class="btn btn-primary" data-bind="click: GetHuman">Find a Human</button>


<h2>Search Results</h2>
<div class="well">
    <pre class="prettyprint">
    Human ID: <!--ko text: viewModel.humanId--><!--/ko-->
    Gender: <!--ko text: viewModel.gender--><!--/ko-->
    Note To Self: <!--ko text: viewModel.noteToSelf--><!--/ko-->
    </pre>
</div>
